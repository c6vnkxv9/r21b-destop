{
  "name": "two-rooms-and-one-boom-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:frontend": "cd frontend && npm run serve",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "lint:frontend": "cd frontend && npm run lint",
    "deploy:frontend": "cd frontend && npm run deploy",
    "deploy:backend": "curl -X POST ${RENDER_DEPLOY_HOOK_URL}"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}